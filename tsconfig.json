{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "target": "ES6",
        "moduleResolution": "Node16",
        "noEmit": false,
        "outDir": "dist",
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": [
        "./node_modules"
    ]
}